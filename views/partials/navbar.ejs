<header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark border-bottom shadow-sm sticky-top">
    <a href="/campgrounds" class="h5 my-0 me-md-auto text-light text-decoration-none">Yelpcamp</a>
    <% if(!currentUser){%> 
    <a class="btn btn-outline-primary me-2" href="/register">Sign up</a>
    <a class="btn btn-outline-primary me" href="/login">Log in</a>
    <% } %>
    <% if(currentUser){ %>  
    <a class="btn btn-outline-primary me-2" href="/profile/<%= currentUser.id %>"><%= currentUser.name %> </a>
    <a class="btn btn-outline-primary" href="/logout">Logout</a>
    <% } %> 
</header>