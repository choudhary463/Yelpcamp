<% layout('layouts/boilerplate') %> 
<%- include('../partials/flash') %> 
<h2>All Campgrounds</h2>
  <div class="album py-5 bg-light">
    <div class="container">
        <a class="btn btn-primary mb-4" href="/campgrounds/new">Add new</a>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% for(let camp of AllCampGrounds){%>
            <div class="col">
            <div class="card shadow-sm">
                <img src="<%= camp.images[0].url %> " width="100%" height="250">
                <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <small class="text-muted"><%= camp.location %></small>
                </div>
                <div class="pt-2">
                    <p class="card-text"><%= camp.description %> </p>
                </div>
                <div class="d-flex justify-content-between align-items-center pt-2">
                    <div class="btn-group">
                    <a type="button" class="btn btn-sm btn-outline-secondary" href="campgrounds/<%= camp.id %>">View</a>
                    </div>
                </div>
                </div>
            </div>
            </div>
        <% } %> 
      </div>
    </div>
  </div>