<% layout('layouts/boilerplate') %> 

<%- include('../partials/flash') %> 

<div class="row">
    <div class="col-md-3">
        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="125">
    </div>
    <div class="col">
        <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= user.name %> 
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= user.email %> 
                </div>
              </div>
          </div>
    </div>
</div>

<h2 class="my-3"><%= user.name %>'s campgrounds </h2>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% for(let camp of campgrounds){%>
        <div class="col">
        <div class="card shadow-sm">
            <img src="<%= camp.image %> " width="100%" height="250">
            <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title"><%= camp.title %></h5>
                <small class="text-muted"><%= camp.location %></small>
            </div>
            <div class="pt-2">
                <p class="card-text"><%= camp.description %> </p>
            </div>
            <div class="d-flex justify-content-between align-items-center pt-2">
                <div class="btn-group">
                <a type="button" class="btn btn-sm btn-outline-secondary" href="/campgrounds/<%= camp.id %>">View</a>
                </div>
            </div>
            </div>
        </div>
        </div>
    <% } %> 
  </div>