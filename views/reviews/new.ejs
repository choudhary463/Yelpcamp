<% layout('layouts/boilerplate') %> 

<%- include('../partials/flash') %> 

<div class="row">
    <div class="col-6">
        <div class="mb-3">
            <img src="<%= camp.image %>" class="card-img-top" alt="..." width="400" height="400">
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h1 class="inline"><%= camp.title %></h1>
                    <a href="/profile/<%= camp.author %>">author</a>
                </div>
                <p class="card-text"><%= camp.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= camp.location%> </li>
                <li class="list-group-item"><strong>$<%= camp.price %>/night</strong></li>
            </ul>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p><strong>Ratings and Reviews</strong></p>
                    <% if(camp.totalUsers) {%>
                        <a href="#"><%= (camp.totalRating/(5*camp.totalUsers)).toFixed(2) %>/5 </a>
                    <% }else{ %>
                        <p>No ratings yet</p>
                    <% } %>   
                </div>
                <div class="d-flex justify-content-center">
                    <h6>Leave a Review</h6>
                </div>
                <div class="d-flex justify-content-center">
                    <form action="/campgrounds/<%=camp.id%>/reviews" method="POST" class="mb-3 validated-form">
                        <div class="mb-3">
                            <label class="form-label" for="rating">Rating</label>
                            <input class="form-range" type="range" min="1" max="5" name="rating" id="rating" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="body">Review</label>
                            <textarea class="form-control" name="body" id="body" cols="30" rows="3"></textarea>
                        </div>
                        <button class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
